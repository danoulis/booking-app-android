<resources xmlns:android="http://schemas.android.com/apk/res/android">

	<style name="MapAddressDisplayBase">
		<item name="android:ellipsize">end</item>
		<item name="android:gravity">center_vertical</item>
		<item name="android:lines">1</item>
		<item name="android:maxLines">2</item>
		<item name="android:clickable">true</item>
		<item name="android:textSize">16dp</item>
		<item name="android:minHeight">30dp</item>
	</style>
	<style name="MapAddressPickup" parent="@style/MapAddressDisplayBase">
		<item name="android:textColor">@color/pickup_location</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="MapAddressDropoff" parent="@style/MapAddressDisplayBase">
		<item name="android:textColor">@color/dropoff_location</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>