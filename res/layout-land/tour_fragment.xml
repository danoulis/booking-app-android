<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Tour" >

    <uk.co.jasonfry.android.tools.ui.SwipeView
        android:id="@+id/swipe_view"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:gravity="center" >

        <include layout="@layout/tour_page_01" />
        <include layout="@layout/tour_page_02" />
        <include layout="@layout/tour_page_03" />
        <include layout="@layout/tour_page_04" />
    </uk.co.jasonfry.android.tools.ui.SwipeView>

    <uk.co.jasonfry.android.tools.ui.PageControl
        android:id="@+id/page_control"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="horizontal" />

</LinearLayout>